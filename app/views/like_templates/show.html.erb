<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Like #<%= @like.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/likes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link like start -->
      <div class="col">
        <a href="/likes/<%= @like.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit like
        </a>
      </div>
      <!-- Edit link like end -->

      <!-- Delete link like start -->
      <div class="col">
        <a href="/delete_like/<%= @like.id %>" class="btn btn-block btn-outline-secondary">
          Delete like
        </a>
      </div>
      <!-- Delete link like end -->
    </div>

    <dl>
      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <% if @like.user.present? %>
          <a href="/users/<%= @like.user_id %>">
            <%= @like.user.email %>
          </a>
        <% end %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Post
      </dt>
      <!-- Display post_id start -->
      <dd>
        <% if @like.post.present? %>
          <a href="/posts/<%= @like.post_id %>">
            <%= @like.post.created_at %>
          </a>
        <% end %>
      </dd>
      <!-- Display post_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@like.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@like.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

