<!-- Validation failure messages -->
<% if @like.present? %>
  <% if @like.errors.any? %>
    <% @like.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new like
</h1>


<hr>

<!-- Form like start -->
<form action="/create_like" method="post">
<!-- Form like end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @like.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for post_id start -->
  <div class="form-group">
    <label for="post_id">
      Post
    </label>

    <!-- Input for post_id start -->
    <%= select_tag(:post_id, options_from_collection_for_select(Post.all, :id, :created_at, @like.post_id), :class => "form-control") %>
    <!-- Input for post_id end -->
  </div>
  <!-- Label and input for post_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create like
  </button>
</form>

<hr>

<a href="/likes">
  Go back
</a>
