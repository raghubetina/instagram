<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All posts
    </h1>

    <a href="/posts/new" class="btn btn-block btn-outline-secondary">
      Add a new post
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @posts.each do |post| %>
      <tr>
        <!-- Display post.id start -->
        <td>
          <%= post.id %>
        </td>
        <!-- Display post.id end -->

        <!-- Display post.image start -->
        <td>
          <img src='<%= post.image %>' class='img-fluid'>
        </td>
        <!-- Display post.image end -->

        <!-- Display post.caption start -->
        <td>
          <%= post.caption %>
        </td>
        <!-- Display post.caption end -->

        <!-- Display post.user_id start -->
        <td>
          <%= post.user.email %>
        </td>
        <!-- Display post.user_id end -->

        <!-- Display post.created_at start -->
        <td>
          <%= time_ago_in_words(post.created_at) %> ago
        </td>
        <!-- Display post.created_at end -->

        <!-- Display post.updated_at start -->
        <td>
          <%= time_ago_in_words(post.updated_at) %> ago
        </td>
        <!-- Display post.updated_at end -->

        <td>
          <a href="/posts/<%= post.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
