<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Sent Followings

    <a data-toggle="collapse" href="#user_sent_followings_new_form">
      Add following
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.sent_followings.each do |following| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/followings/<%= following.id %>">
          <%= following.recipient_id %>
        </a>
        <!-- Show link end -->

      </li>
    <% end %>

  </ul>
</div>
