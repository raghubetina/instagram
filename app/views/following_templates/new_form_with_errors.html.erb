<!-- Validation failure messages -->
<% if @following.present? %>
  <% if @following.errors.any? %>
    <% @following.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new following
</h1>


<hr>

<!-- Form following start -->
<form action="/create_following" method="post">
<!-- Form following end -->

  <!-- Label and input for recipient_id start -->
  <div class="form-group">
    <label for="recipient_id">
      Recipient
    </label>

    <!-- Input for recipient_id start -->
    <%= select_tag(:recipient_id, options_from_collection_for_select(User.all, :id, :email, @following.recipient_id), :class => "form-control") %>
    <!-- Input for recipient_id end -->
  </div>
  <!-- Label and input for recipient_id end -->

  <!-- Label and input for sender_id start -->
  <div class="form-group">
    <label for="sender_id">
      Sender
    </label>

    <!-- Input for sender_id start -->
    <%= select_tag(:sender_id, options_from_collection_for_select(User.all, :id, :email, @following.sender_id), :class => "form-control") %>
    <!-- Input for sender_id end -->
  </div>
  <!-- Label and input for sender_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create following
  </button>
</form>

<hr>

<a href="/followings">
  Go back
</a>
