<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All followings
    </h1>

    <a href="/followings/new" class="btn btn-block btn-outline-secondary">
      Add a new following
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Recipient
        </th>

        <th>
          Sender
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @followings.each do |following| %>
      <tr>
        <!-- Display following.id start -->
        <td>
          <%= following.id %>
        </td>
        <!-- Display following.id end -->

        <!-- Display following.recipient_id start -->
        <td>
          <%= following.recipient.email %>
        </td>
        <!-- Display following.recipient_id end -->

        <!-- Display following.sender_id start -->
        <td>
          <%= following.sender_id %>
        </td>
        <!-- Display following.sender_id end -->

        <!-- Display following.created_at start -->
        <td>
          <%= time_ago_in_words(following.created_at) %> ago
        </td>
        <!-- Display following.created_at end -->

        <!-- Display following.updated_at start -->
        <td>
          <%= time_ago_in_words(following.updated_at) %> ago
        </td>
        <!-- Display following.updated_at end -->

        <td>
          <a href="/followings/<%= following.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
