<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All followings
    </h1>

    <a href="/followings/new" class="btn btn-block btn-outline-secondary">
      Add a new following
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "following_templates/followings_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Recipient
        </th>

        <th>
          Sender
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @followings.each do |following| %>
      <tr>
        <td>
          <%= following.id %>
        </td>

        <td>
          <% if following.recipient.present? %>
            <a href="/users/<%= following.recipient.id %>">
              <%= following.recipient.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if following.sender.present? %>
            <a href="/users/<%= following.sender.id %>">
              <%= following.sender.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(following.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(following.updated_at) %> ago
        </td>

        <td>
          <a href="/followings/<%= following.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @followings, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
