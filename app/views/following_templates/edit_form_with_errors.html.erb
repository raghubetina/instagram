<!-- Validation failure messages -->
<% if @following.errors.any? %>
  <% @following.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit following #<%= @following.id %>
</h1>

<hr>

<!-- Form following start -->
<form action="/update_following/<%= @following.id %>" method="post">
<!-- Form following end -->

  <!-- Label and input for recipient_id start -->
  <div class="form-group">
    <label for="recipient_id">
      Recipient
    </label>

    <!-- Input for recipient_id start -->
    <input type="text" id="recipient_id" name="recipient_id" class="form-control" value="<%= @following.recipient_id %>">
    <!-- Input for recipient_id end -->
  </div>
  <!-- Label and input for recipient_id end -->

  <!-- Label and input for sender_id start -->
  <div class="form-group">
    <label for="sender_id">
      Sender
    </label>

    <!-- Input for sender_id start -->
    <input type="text" id="sender_id" name="sender_id" class="form-control" value="<%= @following.sender_id %>">
    <!-- Input for sender_id end -->
  </div>
  <!-- Label and input for sender_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update following
  </button>
</form>

<hr>

<a href="/followings">
  Go back
</a>
